<Window x:Class="MyTime.Views.MainWindow"
        Name="TimeTracker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        Height="680" Width="900"
        Background="Transparent"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        AllowsTransparency="False">

    <Border Background="#272537">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <TextBlock Text="TimeTracker"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="22"
                       Margin="20,0,0,0"/>

            <StackPanel Grid.Row="1">

                    <RadioButton Content="Home"
                                 Height ="50"
                                 Foreground="White"
                                 FontSize="14"
                                 Style="{StaticResource MenuButtonTheme}"
                                 IsChecked="True"
                                 Command="{Binding NavigateToViewInContentRegionCommand}"
                                 CommandParameter="HomeView"/>

                    <RadioButton Content="Work Time"
                                 Height ="50"
                                 Foreground="White"
                                 FontSize="14"
                                 Style="{StaticResource MenuButtonTheme}"
                                 Command="{Binding NavigateToViewInContentRegionCommand}"
                                 CommandParameter="WorkTimeView"/>

                    <RadioButton Content="Tasks"
                                 Height ="50"
                                 Foreground="White"
                                 FontSize="14"
                                 Style="{StaticResource MenuButtonTheme}"
                                 Command="{Binding NavigateToViewInContentRegionCommand}"
                                 CommandParameter="TasksView"/>

                </StackPanel>

            <ContentControl x:Name="MainContent"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="10"
                            prism:RegionManager.RegionName="ContentRegion"/>

            <RadioButton Content="Close"
                         Height ="50"
                         Foreground="White"
                         FontSize="14"
                         Grid.Column="0"
                         Grid.Row="2"
                         Command="{Binding CloseCommand}"
                         Style="{StaticResource MenuButtonTheme}"
                         CommandParameter="hey"/>
                         <!--CommandParameter="{Binding ElementName=TimeTracker}"-->
                         

        </Grid>
        
    </Border>

</Window>
