<UserControl x:Class="MyTime.Views.WorkTimeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyTime.Views"
             xmlns:viewModels="clr-namespace:MyTime.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewModels:WorkTimeViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <CollectionViewSource x:Key="workTimesViewSource"
                              Source="{Binding WorkTimes}"/>
    </UserControl.Resources>
    
    <StackPanel>
        <TextBlock Text="Work Time"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>


            <TextBlock Foreground="White"
                       Grid.Column="0"
                       Grid.Row="0"
                       Text="Work Time"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            
            <TextBlock Grid.Column="1"
                   Grid.Row="0"
                   Name="CurrentWorkTimeLabel"
                   Foreground="White"
                   Text="{Binding CurrentWorkTimeDuration, StringFormat={}{0:hh}:{0:mm}:{0:ss}, TargetNullValue='00:00:00'}"/>
            
            <TextBlock Foreground="White"
                       Grid.Column="2"
                       Grid.Row="0"
                       Text="Pause"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            

            <TextBlock Grid.Column="3"
                   Grid.Row="0"
                   Name="CurrentPauseTimeLabel"
                   Foreground="White"
                   Text="{Binding CurrentPause.Duration, StringFormat={}{0:hh}:{0:mm}:{0:ss}, TargetNullValue='00:00:00'}"/>
            
            <Button Grid.Column="4"
                    Grid.Row="0"
                    Content="Start"
                    Command="{Binding StartWorkTimeStopWatch}"/>

            <Button Grid.Column="5"
                    Grid.Row="0"
                    Content="Pause"
                    Command="{Binding PauseWorkTimeStopWatch}"/>

            <Button Grid.Column="6"
                    Grid.Row="0"
                    Content="Stop"
                    Command="{Binding StopWorkTimeStopWatch}"/>

            <TextBlock Foreground="White"
                       Grid.Column="0"
                       Grid.Row="1"
                       Text="today"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="1"
                   Grid.Row="1"
                   Name="DailyWorkTimeLabel"
                   Foreground="White"
                   Text="{Binding AccumulatedWorkTimes.DailyTime, StringFormat={}{0:hh}:{0:mm}:{0:ss}, TargetNullValue='00:00:00'}"/>

            <TextBlock Foreground="White"
                       Grid.Column="0"
                       Grid.Row="2"
                       Text="this week"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="1"
                   Grid.Row="2"
                   Name="WeeklyWorkTimeLabel"
                   Foreground="White"
                   Text="{Binding AccumulatedWorkTimes.WeeklyTime, StringFormat={}{0:hh}:{0:mm}:{0:ss}, TargetNullValue='00:00:00'}"/>

            <TextBlock Foreground="White"
                       Grid.Column="0"
                       Grid.Row="3"
                       Text="this month"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="1"
                   Grid.Row="4"
                   Name="MonthlyWorkTimeLabel"
                   Foreground="White"
                   Text="{Binding AccumulatedWorkTimes.MonthlyTime, StringFormat={}{0:hh}:{0:mm}:{0:ss}, TargetNullValue='00:00:00'}"/>

            <TextBlock Foreground="White"
                       Grid.Column="2"
                       Grid.Row="1"
                       Text="today"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            
            <TextBlock Grid.Column="3"
                   Grid.Row="1"
                   Name="DailyPauseTimeLabel"
                   Foreground="White"
                   Text="{Binding AccumulatedPauseTimes.DailyTime, StringFormat={}{0:hh}:{0:mm}:{0:ss}, TargetNullValue='00:00:00'}"/>

            <TextBlock Foreground="White"
                       Grid.Column="2"
                       Grid.Row="2"
                       Text="this week"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="3"
                   Grid.Row="2"
                   Name="WeeklyPauseTimeTextBox"
                   Foreground="White"
                   Text="{Binding AccumulatedPauseTimes.WeeklyTime, StringFormat={}{0:hh}:{0:mm}:{0:ss}, TargetNullValue='00:00:00'}"/>

            <TextBlock Foreground="White"
                       Grid.Column="2"
                       Grid.Row="3"
                       Text="this month"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="3"
                   Grid.Row="3"
                   Name="MonthlyPauseTimeTextBox"
                   Foreground="White"
                   Text="{Binding AccumulatedPauseTimes.MonthlyTime, StringFormat={}{0:hh}:{0:mm}:{0:ss}, TargetNullValue='00:00:00'}"/>
        </Grid>

        <DataGrid x:Name="workTimesDataGrid"
                  AutoGenerateColumns="False"
                  EnableRowVirtualization="True"
                  ItemsSource="{Binding Source={StaticResource workTimesViewSource}}"
                  RowDetailsVisibilityMode="VisibleWhenSelected"
                  RenderTransformOrigin="0.488,0.251"
                  ScrollViewer.CanContentScroll="True" 
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  Height="310"
                  Margin="10">

            <DataGrid.Columns>

                <DataGridTextColumn Binding="{Binding Id}"
                                    Header="Id"
                                    Width="*"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Start, StringFormat={}{0:dd}.{0:MM}.{0:yyyy}}"
                                    Header="Date"
                                    Width="*"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Duration, StringFormat={}{0:hh}:{0:mm}:{0:ss}}"
                                    Header="Duration"
                                    Width="*"
                                    IsReadOnly="True"/>
    
            </DataGrid.Columns>
        </DataGrid>
        
    </StackPanel>
    
</UserControl>
